# =============================================================================
# Solar-Sim Infrastructure Environment Variables
# Copy to .env and fill in values
# =============================================================================

# Domain and TLS
# The domain where Solar-Sim will be accessible (e.g., solar-sim.example.com)
DOMAIN=localhost
ACME_EMAIL=admin@localhost

# PostgreSQL Database
# Generate a strong password: openssl rand -base64 32
POSTGRES_PASSWORD=change_me_to_a_strong_password

# Overpass API Mode
# 'init' for first run (downloads and indexes data, takes 4-12 hours)
# 'clone' for subsequent runs (uses existing database)
OVERPASS_MODE=init

# =============================================================================
# Stripe (Payment Processing)
# Get keys from https://dashboard.stripe.com/apikeys
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard)
# Pay-per-plan tier: $1.50/month per additional plan
STRIPE_PRICE_PLAN=price_...
# Pro tier: $25/month for 75 plans
STRIPE_PRICE_PRO=price_...

# =============================================================================
# Backup Configuration (Optional)
# =============================================================================

# Encryption key for backups (generate with: openssl rand -base64 32)
BACKUP_ENCRYPTION_KEY=

# Backblaze B2 credentials for cloud backup
# Create bucket and keys at https://www.backblaze.com/b2/cloud-storage.html
B2_BUCKET=
B2_KEY_ID=
B2_APPLICATION_KEY=

# How many days to keep backups
RETENTION_DAYS=30

# =============================================================================
# Optional: External API Keys (for fallback/non-cached regions)
# =============================================================================

# ShadeMap API (if using their shadow calculation service)
SHADEMAP_API_KEY=
